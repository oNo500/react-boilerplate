# ==============================================================================
# Vite Environment Variables
# @see https://vitejs.dev/guide/env-and-mode.html
#
# To expose environment variables to the browser, they must be prefixed with 'VITE_'.
# Variables without the prefix are only available in the Node.js environment 
# (e.g., during the build process).
# ==============================================================================

# ------------------------------------------------------------------------------
# API Configuration
# ------------------------------------------------------------------------------
# The base URL for the API.
VITE_API_URL=http://localhost:5173

# When 'true', enables the mock service worker to intercept API requests
# and return mock data. This is useful for frontend development without
# a running backend.
VITE_ENABLE_MOCK=true

# ------------------------------------------------------------------------------
# Sentry (Error Tracking & Performance Monitoring)
# @see https://docs.sentry.io/
# ------------------------------------------------------------------------------
# The Data Source Name (DSN) for your Sentry project. This is required for the
# browser-side client to capture and report errors.
VITE_SENTRY_DSN=''

# The authentication token for the Sentry API.
# This is used by the Sentry Vite plugin during the build process to upload
# source maps, which helps in debugging minified production code.
# This value is NOT exposed to the browser.
SENTRY_AUTH_TOKEN=''



